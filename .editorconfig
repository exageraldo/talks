# https://editorconfig.org/
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
indent_size = 4
max_line_length = 119
insert_final_newline = true

[*.md]
insert_final_newline = false

[Makefile]
indent_style = tab
insert_final_newline = false
